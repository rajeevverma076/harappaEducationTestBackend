{
  "name": "rest-api-node-jwt-typescript",
  "version": "0.1.0",
  "description": "A Rest-API written in TypeScript using Node.js/express and secured by API-Key & JWT",
  "scripts": {
    "start": "nodemon -x ts-node src/server.ts",
    "build": "npm run build-ts && npm run tslint",
    "prod": "pm2 start pm2.yml",
    "compile": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "serve": "node dist/server.js",
    "watch-node": "sleep 5 && nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "aws-sdk": "^2.673.0",
    "bcrypt": "^5.0.0",
    "bcrypt-nodejs": "0.0.3",
    "compression": "^1.7.3",
    "convert-excel-to-json": "^1.6.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "google-trends-api": "^4.9.0",
    "http": "0.0.0",
    "https": "^1.0.0",
    "inversify": "^5.0.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.13",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.6",
    "nodemon": "^1.19.4",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "socket.io": "^2.3.0",
    "uuid": "^3.4.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.6",
    "@types/express-rate-limit": "^3.3.4",
    "@types/lodash": "^4.14.150",
    "@types/mongoose": "^5.7.15",
    "@types/multer": "^1.4.3",
    "@types/node": "^11.15.12",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.3",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^3.4.9",
    "concurrently": "^5.2.0",
    "ts-node": "^8.10.1",
    "tsc-watch": "^2.4.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rajeevverma076/apiems.git"
  },
  "author": "rajeev.verma076@gmail.com",
  "license": "MIT"
}
